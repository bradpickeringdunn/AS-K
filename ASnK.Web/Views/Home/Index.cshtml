@model ASnK.Web.ViewModels.UserViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

@using (Html.BeginForm("Registration", "Events"))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true)

    <div class="ros">
   
        <select id="EventId" name="EventId">
        @foreach (var e in Model.Events)
        {
            <option value="@e.EventId">@e.Name</option>
        }
        </select>

    </div>

    <div class="row">
   
            <div>
                @Html.LabelFor((m) => m.Firstname)
                @Html.EditorFor((m) => m.Firstname)
                @Html.ValidationMessageFor((m) => m.Firstname)
            </div>
            <div>
                @Html.LabelFor((m) => m.Lastname)
                @Html.EditorFor((m) => m.Lastname)
                @Html.ValidationMessageFor((m) => m.Lastname)
            </div>
            <div>
                @Html.LabelFor((m) => m.Email)
                @Html.EditorFor((m) => m.Email)
                @Html.ValidationMessageFor((m) => m.Email)
            </div>
            <div>
                @Html.LabelFor((m) => m.Country)
                @Html.EditorFor((m) => m.Country)
                @Html.ValidationMessageFor((m) => m.Country)
            </div>
            <div>
                @Html.LabelFor((m) => m.ArrivalDate)
                @Html.EditorFor((m) => m.ArrivalDate)
                @Html.ValidationMessageFor((m) => m.ArrivalDate)
            </div>
            <div>
                @Html.LabelFor((m) => m.ArrivalTime)
                @Html.EditorFor((m) => m.ArrivalTime)
                @Html.ValidationMessageFor((m) => m.ArrivalTime)
            </div>
            <div>
                @Html.LabelFor((m) => m.RegistrationDate)
                @Html.EditorFor((m) => m.RegistrationDate)
                @Html.ValidationMessageFor((m) => m.RegistrationDate)
            </div>
            <input type="submit" value="Register"/>    
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}